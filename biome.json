{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": { "ignoreUnknown": true },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "expand": "auto",
    "useEditorconfig": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage",
      "!**/.idea",
      "!.vscode/*",
      ".vscode/extensions.json",
      "!**/test-results.json",
      "!**/a11y-results.json",
      "!**/lint-results.json",
      "!**/e2e-results.json",
      "!**/.nyc_output",
      "!**/.nyc_a11y_output",
      "!**/__diff_output__",
      "!**/.cache",
      "!**/tmp/",
      "!.github/**/*.md",
      "!**/target/",
      "!**/fixture/",
      "!**/__testfixtures__",
      "!**/storybook-static/",
      "!**/playwright-report/",
      "!**/blob-report/",
      "!**/all-blob-reports/",
      "!**/.next/",
      "!**/out/",
      "!**/.docgen/",
      "!packages/vkui/**/*.css.d.ts",
      "!packages/vkui-floating-ui/**/*.d.ts",
      "!packages/vkui-floating-ui/**/*.d.mts",
      "!packages/vkui-floating-ui/**/*.mjs",
      "!packages/vkui-floating-ui/**/*.esm.js",
      "!packages/vkui-floating-ui/**/*.umd.js",
      "!packages/vkui-floating-ui/**/package.json",
      "packages/vkui-floating-ui/package.json",
      "!packages/vkui-date-fns-tz/**/*.d.ts",
      "!packages/vkui-date-fns-tz/**/*.js",
      "!.yarn/*",
      "!**/package.json"
    ]
  },
  "linter": { "enabled": false },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "preserve",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": true
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    },
    "parser": {
      "cssModules": true
    }
  },
  "html": {
    "formatter": {
      "indentScriptAndStyle": false,
      "selfCloseVoidElements": "always"
    }
  },
  "assist": {
    "enabled": false
  }
}
