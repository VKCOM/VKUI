{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@playwright/test/reporter": ["../../../../node_modules/@playwright/test/reporter"]
    }
  },
  "include": ["src/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
