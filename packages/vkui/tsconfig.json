{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "asIs",
          "customMatcher": "\\.module\\.css$"
        }
      }
    ]
  },
  "include": [
    "src/**/*.ts*",
    "src/**/*.js",
    ".storybook/**/*.ts*",
    "**/*.config.js",
    "*.config.*.js",
    "*.setup.js",
    ".eslintrc.js"
  ],
  "files": ["./global.d.ts", "types/env.d.ts"]
}
