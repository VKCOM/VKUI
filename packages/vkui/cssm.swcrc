{
  "$schema": "https://json.schemastore.org/swcrc",
  "exclude": [
    "\\.(test|spec|e2e|stories)\\.[jt]sx?$",
    "testing/",
    "storybook/"
  ],

  "module": {
    "type": "es6"
  },

  "jsc": {
    "externalHelpers": true,
    "parser": {
      "syntax": "typescript",
      "tsx": true
    },
    "transform": {
      "react": {
        "runtime": "classic"
      }
    },

    "target": "esnext"
  }
}
