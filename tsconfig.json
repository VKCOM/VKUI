{
  "compilerOptions": {
    // см. `./src/shared/breakpoints.js`
    "allowJs": true,
    "jsx": "react",
    "target": "esnext",
    "lib": ["es6", "dom", "dom.Iterable"],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "src",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "asIs",
          "customMatcher": "\\.module\\.css$"
        }
      }
    ],
    "paths": {
      "@react-playwright": ["../e2e"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "e2e/**/*.ts",
    "e2e/**/*.tsx",
    "e2e/**/*.js",
    ".github/**/*.js",
    "packages/**/*.js",
    "*.js"
  ],
  "exclude": ["packages/token-translator/**/*"],
  "files": [
    "node_modules/jest-playwright-preset/types/global.d.ts",
    "node_modules/expect-playwright/global.d.ts",
    "types/global.d.ts",
    "types/env.d.ts"
  ]
}
