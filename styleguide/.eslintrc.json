{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "requireConfigFile": false, // Disable "no babel.config.js" error
    "ecmaVersion": 2020, // Allows for the parsing of modern ECMAScript features
    "sourceType": "module", // Allows for the use of imports
    "ecmaFeatures": {
      "jsx": true, // Allows for the parsing of JSX
      "restParams": true,
      "spread": true
    }
  },
  "extends": ["@vkontakte/eslint-config/react", "prettier"],
  "rules": {
    "react/prop-types": [0],
    "no-shadow": "off"
  }
}
